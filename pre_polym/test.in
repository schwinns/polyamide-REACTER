

# ----------------- Init Section -----------------

include "system.in.init"


# ----------------- Atom Definition Section -----------------

read_data "cleanedsystem.data"


# ----------------- Settings Section -----------------

include "cleanedsystem.in.settings"


# ----------------- Run Section -----------------

neighbor	    2.0 bin
neigh_modify	every 1 delay 0 check yes
timestep        2.0

dump		pre_polym all xtc 500 test.xtc
thermo_style custom step temp press pe ke etotal epair ebond eangle edihed eimp vol
thermo 100

# Minimization 
minimize 	0 1e-8 10000 10000
write_data 	test_min.data

velocity all create 300.0 123456 dist gaussian

# 10 ps NVT (10 ps total)
fix 1 all nve
fix 3 all temp/rescale 1 300.0 300.0 1.0 1.0
run           5000
unfix 1
unfix 3

write_restart test.restart

# 10 ps NPT (20 ps total)
